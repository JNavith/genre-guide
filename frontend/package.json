{
	"name": "genre.guide-frontend",
	"version": "2020.03.25",
	"scripts": {
		"firebase": "node ./node_modules/.bin/firebase",
		"firebase:deploy": "npm run firebase deploy",
		"sapper": "node ./node_modules/sapper/dist/cli.js",
		"sapper:dev": "npm run sapper dev",
		"sapper:clean": "rimraf - functions/__sapper__/build",
		"sapper:setup": "mkdirp functions/__sapper__/build",
		"sapper:build": "npm run sapper build",
		"sapper:copy": "ncp ./__sapper__/build ./functions/__sapper__/build",
		"sapper:prod": "run-s sapper:clean sapper:setup sapper:build sapper:copy",
		"tailwind:dev": "node ./node_modules/postcss-cli/bin/postcss --verbose --env development src/tailwind.pcss --output static/main.css --watch",
		"tailwind:prod": "node ./node_modules/postcss-cli/bin/postcss --verbose --env production src/tailwind.pcss --output static/main.css",
		"dev": "run-p sapper:dev tailwind:dev",
		"prod": "run-p sapper:prod tailwind:prod",
		"deploy": "run-s prod firebase:deploy"
	},
	"dependencies": {
		"@types/node-fetch": "^2.5.5",
		"compression": "^1.7.1",
		"express": "^4.17.1",
		"node-fetch": "^2.6.0",
		"sirv": "^0.4.0"
	},
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.9.0",
		"@babel/preset-env": "^7.9.0",
		"@babel/runtime": "^7.9.2",
		"@fullhuman/postcss-purgecss": "^2.1.0",
		"@pyoner/svelte-ts-preprocess": "^1.2.1",
		"@pyoner/svelte-types": "^3.4.4-2",
		"@rollup/plugin-commonjs": "^11.0.2",
		"@rollup/plugin-json": "^4.0.2",
		"@rollup/plugin-node-resolve": "^7.1.1",
		"@rollup/plugin-replace": "^2.3.1",
		"@tailwindcss/ui": "^0.1.3",
		"@types/express": "^4.17.3",
		"@types/graphql": "^14.5.0",
		"@types/ioredis": "^4.14.9",
		"@typescript-eslint/eslint-plugin": "^2.25.0",
		"@typescript-eslint/parser": "^2.25.0",
		"abort-controller": "^3.0.0",
		"apollo-server-express": "^2.10.1",
		"bufferutil": "^4.0.1",
		"connect": "^3.7.0",
		"cross-env": "^7.0.2",
		"cssnano": "^4.1.10",
		"eslint": "^6.8.0",
		"eslint-plugin-svelte3": "^2.7.3",
		"firebase-tools": "^7.16.1",
		"google-fonts-complete": "github:crswll/google-fonts-complete#rerun-font-fetch",
		"graphql": "^14.6.0",
		"ioredis": "^4.16.0",
		"mkdirp": "^1.0.3",
		"ncp": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^7.1.0",
		"postcss-font-magician": "^2.3.1",
		"postcss-preset-env": "^6.7.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rollup": "^1.31.1",
		"rollup-plugin-babel": "^4.4.0",
		"rollup-plugin-svelte": "^5.1.1",
		"rollup-plugin-terser": "^5.3.0",
		"rollup-plugin-typescript2": "^0.21.2",
		"sapper": "^0.27.11",
